@{
  Layout = "_Layout";
}

<div class="page-header">
  <h1>Add a Band</h1>
</div>
<form action="/band-added" method="post" class="form-group">
  <label for="band">Band Name</label>
  <input type="text" name="band-name" class="form-control" pattern=".{1,}" required title="One or more characters" autofocus>
  <button type="submit" class="btn btn-success form-input" name="button">Add</button>
</form>
