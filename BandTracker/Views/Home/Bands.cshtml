@{
  Layout = "_Layout";
}

@if(Model.Count == 0)
{
  <div class="page-header">
    <h1>There are no bands</h1>
  </div>
}
else
{
  <div class="page-header">
    <h1>Bands</h1>
  </div>

  @foreach(var band in Model)
  {
    <form action="/band-deleted/@band.GetId()" method="post">
      <a href="/band-details/@band.GetId()">
        <div class="well">
          <h4>@band.GetName()
            <button type="submit" class="btn btn-danger delete">X</button>
            </h4>
        </div>
      </a>
    </form>
  }
}
