@{
  Layout = "_Layout";
}

@if(Model.Count == 0)
{
  <div class="page-header">
    <h1>There are no bands</h1>
  </div>
}
else
{
  <div class="page-header">
    <h1>Bands</h1>
  </div>

  @foreach(var band in Model)
  {
    <a href="/band-details/@band.GetId()"><div class="well">@band.GetName()</div></a>
  }
}
